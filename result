def input_marks():
    """
    Function to input marks for multiple subjects.
    Returns a list of marks.
    """
    marks = []
    num_subjects = int(input("Enter the number of subjects: "))
    for i in range(num_subjects):
        mark = float(input(f"Enter marks for Subject {i+1}: "))
        marks.append(mark)
    return marks

def calculate_total_and_average(marks):
    """
    Function to calculate total and average from a list of marks.
    Returns a tuple (total, average).
    """
    total = sum(marks)
    average = total / len(marks) if marks else 0
    return total, average

def assign_grade(average):
    """
    Function to assign grade based on average marks.
    Returns the grade as a string.
    """
    if average >= 90:
        grade = "A+"
    elif average >= 80:
        grade = "A"
    elif average >= 70:
        grade = "B"
    elif average >= 60:
        grade = "C"
    elif average >= 50:
        grade = "D"
    else:
        grade = "F"
    return grade

def display_result(total, average, grade):
    """
    Function to display the result.
    """
    print("\n--- Student Result ---")
    print(f"Total Marks: {total}")
    print(f"Average: {average:.2f}")
    print(f"Grade: {grade}")

# Main function to run the system
def main():
    print("Welcome to Student Result Processing System")
    marks = input_marks()
    total, average = calculate_total_and_average(marks)
    grade = assign_grade(average)
    display_result(total, average, grade)

if "_main_":

    main()